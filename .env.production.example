# Wishper Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application
NODE_ENV=production
HOST=0.0.0.0
PORT=3001

# Port Configuration
API_PORT=3001
POSTGRES_PORT=5432

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=wishper_user
DB_PASSWORD=your_very_secure_production_database_password_here
DB_DATABASE=wishper_db

# JWT Configuration (USE STRONG SECRETS IN PRODUCTION!)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your_very_long_and_secure_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=7d
